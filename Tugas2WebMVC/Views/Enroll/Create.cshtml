@model Tugas2WebMVC.Models.EnrollmentCS

@{
	ViewData["Title"] = "Add Student To Course";
}

<h1 class="my-3">Add Student To Course</h1>
<div class="row">
	<div class="col-md-4">
<hr />
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="studentID" class="form-label">Student Name</label>
				<select id="studentEnroll" name="studentID" class="form-control"></select>
				<span asp-validation-for="studentID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="courseID" class="form-label">Course Title</label>
				<select id="courseEnroll" name="courseID" class="form-control"></select>
				<span asp-validation-for="courseID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="grade" class="form-label"></label>
				<select asp-for="grade" asp-items="@Html.GetEnumSelectList<grade>()" class="form-control"></select>
				<span asp-validation-for="grade" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-controller="Student" asp-action="WithCourse">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
