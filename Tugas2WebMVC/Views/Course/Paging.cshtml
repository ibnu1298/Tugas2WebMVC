@model Tugas2WebMVC.Models.PagingCourse

@{
	ViewData["Title"] = "Paging Course";
}

<h1 class="my-3">@ViewData["Title"]</h1>
<div class="card my-3">
	<div class="card-body">
		<div class="col-md-10">
			<p>
				<a asp-action="Create">Create New</a>
			</p>
			<table class="table table-bordered my-3">
				<thead>
					<tr >
						<th rowspan="2" class="text-center align-middle">ID</th>
						<th rowspan="2" class="text-center align-middle">Title</th>
						<th rowspan="2" class="text-center align-middle">Credits</th>
						<th colspan="3" class="text-center">Student</th>
						<th rowspan="2" class="text-center align-middle">Action</th>
					</tr>
					<tr>
						<th class="text-center">Grade</th>
						<th class="text-center">Name</th>
						<th class="text-center">Date</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.courses)
					{
						<tr style="color:black;">
							<td class="text-center align-middle">
								@Html.DisplayFor(modelItem => item.courseID)
							</td>
							<td class="text-center align-middle">
								@Html.DisplayFor(modelItem => item.title)
							</td>
							<td class="text-center align-middle">
								@Html.DisplayFor(modelItem => item.credits)
							</td>
							<td class="text-center">
								@foreach (var enroll in item.enrollments)
								{
									<ul>
										<li>@enroll.grade </li>
									</ul>
								}
							</td>
							<td>
								@foreach (var enroll in item.enrollments)
								{
									<ul>
										<li>@enroll.student.firstMidName @enroll.student.lastName</li>
									</ul>
								}
							</td>
							<td>
								@foreach (var enroll in item.enrollments)
								{
									<ul>
										<li>@enroll.student.enrollmentDate</li>
									</ul>
								}
							</td>
							<td class="text-center align-middle">
								<a class="btn btn-sm btn-warning" asp-action="Update"
							   asp-route-id="@item.courseID">Update</a>
								<a class="btn btn-sm btn-info" asp-action="Details"
							   asp-route-id="@item.courseID">Details</a>
								<a class="btn btn-sm btn-danger" asp-action="Delete"
							   asp-route-id="@item.courseID">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			<div class="pagination">
				@if (Model.currentPage == 1)
				{
					<div style="width:30px; height:30px;"></div>
					<a href="#" style="background-color: dodgerblue;color: white;">@Model.currentPage</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">@(Model.currentPage + 1)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 2)">@(Model.currentPage + 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 3)">@(Model.currentPage + 3)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">&raquo;</a>
				}
				@if (Model.currentPage == 2)
				{
					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">&laquo;</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">@(Model.currentPage - 1)</a>

					<a href="#" style="background-color: dodgerblue;color: white;">@Model.currentPage</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">@(Model.currentPage + 1)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 2)">@(Model.currentPage + 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">&raquo;</a>
				}
				@if (Model.currentPage >= 3 && Model.currentPage <= (Model.pages - 2))
				{
					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">&laquo;</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 2)">@(Model.currentPage - 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">@(Model.currentPage - 1)</a>

					<a href="#" style="background-color: dodgerblue;color: white;">@Model.currentPage</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">@(Model.currentPage + 1)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 2)">@(Model.currentPage + 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">&raquo;</a>
				}
				@if (Model.currentPage == (Model.pages - 1))
				{
					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">&laquo;</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 2)">@(Model.currentPage - 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">@(Model.currentPage - 1)</a>

					<a href="#" style="background-color: dodgerblue;color: white;">@Model.currentPage</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">@(Model.currentPage + 1)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">&raquo;</a>
				}
				@if (Model.currentPage == Model.pages)
				{
					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">&laquo;</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 3)">@(Model.currentPage - 3)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 2)">@(Model.currentPage - 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">@(Model.currentPage - 1)</a>

					<a href="#" style="background-color: dodgerblue;color: white;">@Model.currentPage</a>
					<a href="#"></a>

				}
			</div>
		</div>
	</div>
</div>
