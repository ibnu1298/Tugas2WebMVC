@model Tugas2WebMVC.Models.CourseStudent

@{
	ViewData["Title"] = "Details Course";
}
<h1 style="color:black" class="my-3">Details Course</h1>
<div class="card my-3">
	<div class="card-body">
		<div>
			<dl class="row">
				<dt class="col-sm-2">
					ID
				</dt>
				<dd class="col-sm-10" style="color:black">
					@Html.DisplayFor(model => model.courseID)
				</dd>
				<dt class="col-sm-2">
					Title
				</dt>
				<dd class="col-sm-10" style="color:black">
					@Html.DisplayFor(model => model.title)
				</dd>
				<dt class="col-sm-2">
					Credits
				</dt>
				<dd class="col-sm-10" style="color:black">
					@Html.DisplayFor(model => model.credits)
				</dd>
				@if (@Model.enrollments.Count() == 1)
				{
					<dt class="col-sm-2">Student</dt>
					<table class="col-sm-10 table table-striped">
						<thead>
							<tr>
								<th class="text-center">Grade</th>
								<th>Name</th>
								<th>Date</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var enroll in Model.enrollments)
							{
								<tr>
									<td class="text-center">@enroll.grade</td>
									<td style="color:black">@enroll.student.firstMidName @enroll.student.lastName</td>
									<td style="color:black">@enroll.student.enrollmentDate</td>
								</tr>
							}
						</tbody>
					</table>
				}
				@if (@Model.enrollments.Count() > 1)
				{
					<dt class="col-sm-2">Students</dt>
					<table class="col-sm-10 table table-striped">
						<thead style="background-color:#C0C0C0">
							<tr>
								<th class="text-center">Grade</th>
								<th>Name</th>
								<th>Date</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var enroll in Model.enrollments)
							{
								<tr>
									<td class="text-center">@enroll.grade</td>
									<td style="color:black">@enroll.student.firstMidName @enroll.student.lastName</td>
									<td style="color:black">@enroll.student.enrollmentDate</td>
								</tr>
							}
						</tbody>
					</table>
				}
			</dl>
		</div>
		<div>
			@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
			<a asp-action="Index">Back to List</a>
		</div>
	</div>
</div>
