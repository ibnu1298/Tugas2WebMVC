@model IEnumerable<Tugas2WebMVC.Models.CourseStudent>

@{
	ViewData["Title"] = "WithStudent";
}

<h1 class="my-3">List Course With Student</h1>
<div class="card my-3">
	<div class="card-body">
		<div class="col-md-12">
			<p class="my-3">
				<a asp-action="Create">Create New</a>
			</p>
			<p class="my-3">
				<form asp-action="WithStudent" method="get">
					<input name="Name" type="text" placeholder="Masukan Title" class="form-control-md" style="padding:5px; padding-left:15px; width:auto; height:auto;"/>
					<input type="submit" value="Cari" class="btn btn-primary btn-sm"/>
				</form>
			</p>
			<table class="table table-bordered my-3" align="center">
				<thead>
					<tr>
						<th rowspan="2" class="text-center align-middle">ID</th>
						<th rowspan="2" class="text-center align-middle">Title</th>
						<th rowspan="2" class="text-center align-middle">Credits</th>
						<th colspan="3" style="text-align:center">Student</th>
						<th rowspan="2"></th>
					</tr>
					<tr>
						<th style="text-align:center">Grade</th>
						<th>Name</th>
						<th>Date</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr style="text-align:center; color:black;" class="align-self-center">
							<td class="text-center align-middle">
								@Html.DisplayFor(modelItem => item.courseID)
							</td>
							<td class="text-center align-middle">
								@Html.DisplayFor(modelItem => item.title)
							</td>
							<td class="text-center align-middle">
								@Html.DisplayFor(modelItem => item.credits)
							</td>
							<td>
								@foreach (var students in item.enrollments)
								{
									<ul>
										<li>@students.grade </li>
									</ul>
								}
							</td>
							<td style="text-align:start">
								@foreach (var students in item.enrollments)
								{
									<ul>
										<li>@students.student.firstMidName @students.student.lastName</li>
									</ul>
								}
							</td>
							<td style="text-align:start">
								@foreach (var students in item.enrollments)
								{
									<ul>
										<li>@students.student.enrollmentDate</li>
									</ul>
								}
							</td>
							<td class="text-center align-middle">
								<a class="btn btn-sm btn-warning" asp-action="Update"
							   asp-route-id="@item.courseID">Update</a>
								<a class="btn btn-sm btn-info" asp-action="Details"
							   asp-route-id="@item.courseID">Details</a>
								<a class="btn btn-sm btn-danger" asp-action="Delete"
							   asp-route-id="@item.courseID">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
