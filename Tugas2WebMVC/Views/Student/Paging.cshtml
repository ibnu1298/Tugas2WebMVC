@model Tugas2WebMVC.Models.Paging

@{
	ViewData["Title"] = "Paging Student";
}

<h1 class="my-3">Paging Student</h1>
<div class="card my-3">
	<div class="card-body">
		<div class="col-md-10">
			<p>
				<a asp-action="Create">Create New</a>
			</p>
			<table class="table table-bordered my-3">
				<thead>
					<tr >
						<th rowspan="2" class="align-middle text-center">ID</th>
						<th rowspan="2" class="align-middle text-center">Name</th>
						<th rowspan="2" class="align-middle text-center">Date</th>
						<th colspan="3" style="text-align:center">Course</th>
						<th rowspan="2"></th>
					</tr>
					<tr>
						<th style="text-align:center">Grade</th>
						<th style="text-align:center">Title</th>
						<th style="text-align:center">Credits</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.students)
					{
						<tr style="color:black;">
							<td class="align-middle" style="text-align:center">@Html.DisplayFor(modelItem => item.id)</td>
							<td class="align-middle">@Html.DisplayFor(modelItem => item.firstMidName) @Html.DisplayFor(modelItem => item.lastName) </td>
							<td class="align-middle">@Html.DisplayFor(modelItem => item.enrollmentDate)</td>
							<td style="text-align:center">
								@foreach (var enroll in item.Enrollments)
								{
									<ul>
										<li>@enroll.grade</li>
									</ul>
								}
							</td>
							<td>
								@foreach (var enroll in item.Enrollments)
								{
									<ul>
										<li>@enroll.course.title</li>
									</ul>
								}
							</td>
							<td style="text-align:center">
								@foreach (var enroll in item.Enrollments)
								{
									<ul>
										<li>@enroll.course.credits</li>
									</ul>
								}
							</td>
							<td style="text-align:center" class="align-middle">
								<a class="btn btn-sm btn-warning" asp-action="Update"
							   asp-route-id="@item.id">Update</a>
								<a class="btn btn-sm btn-info" asp-action="Details"
							   asp-route-id="@item.id">Details</a>
								<a class="btn btn-sm btn-danger" asp-action="Delete"
							   asp-route-id="@item.id">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			<div class="pagination">
				@if (Model.currentPage == 1 || Model.currentPage == null)
				{				
					<div style="width:30px; height:30px;"></div>
					<a href="#"	style="background-color: dodgerblue;color: white;">@Model.currentPage</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">@(Model.currentPage + 1)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 2)">@(Model.currentPage + 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 3)">@(Model.currentPage + 3)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">&raquo;</a>
				}
				@if (Model.currentPage == 2)
				{				
					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">&laquo;</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">@(Model.currentPage - 1)</a>

					<a href="#" style="background-color: dodgerblue;color: white;">@Model.currentPage</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">@(Model.currentPage + 1)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 2)">@(Model.currentPage + 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">&raquo;</a>
				}
				@if (Model.currentPage >= 3 && Model.currentPage <= (Model.pages - 2))
				{				
					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">&laquo;</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 2)">@(Model.currentPage - 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">@(Model.currentPage - 1)</a>

					<a href="#" style="background-color: dodgerblue;color: white;">@Model.currentPage</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">@(Model.currentPage + 1)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 2)">@(Model.currentPage + 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">&raquo;</a>
				}
				@if (Model.currentPage == (Model.pages - 1))
				{				
					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">&laquo;</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 2)">@(Model.currentPage - 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">@(Model.currentPage - 1)</a>

					<a href="#" style="background-color: dodgerblue;color: white;">@Model.currentPage</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">@(Model.currentPage + 1)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage + 1)">&raquo;</a>
				}
				@if (Model.currentPage == Model.pages)
				{	
					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">&laquo;</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 3)">@(Model.currentPage - 3)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 2)">@(Model.currentPage - 2)</a>

					<a asp-action="Paging" asp-route-id="@(Model.currentPage - 1)">@(Model.currentPage - 1)</a>

					<a href="#"	style="background-color: dodgerblue;color: white;">@Model.currentPage</a>
					<a href="#"></a>

				}
			</div>
		</div>
	</div>
</div>
