@model Tugas2WebMVC.Models.StudentCourse

@{
	ViewData["Title"] = "Delete Student";
}

<h1 style="color:black" class="my-3">Delete Student</h1>
<div class="card my-3 col-6">
	<div class="card-body">
		<h4>Are you sure you want to delete this Student?</h4>
		<hr>
		<div class="my-3">
			<dl class="row">
				<dt class="col-sm-2">
					ID
				</dt>
				<dd class="col-sm-10" style="color:black">
					@Html.DisplayFor(model => model.id)
				</dd>
				<dt class="col-sm-2">
					Firstname
				</dt>
				<dd class="col-sm-10" style="color:black">
					@Html.DisplayFor(model => model.firstMidName)
				</dd>
				<dt class="col-sm-2">
					Lastname
				</dt>
				<dd class="col-sm-10" style="color:black">
					@Html.DisplayFor(model => model.lastName)
				</dd>
				<dt class="col-sm-2">
					Date
				</dt>
				<dd class="col-sm-10" style="color:black">
					@Html.DisplayFor(model => model.enrollmentDate)
				</dd>
				@if (@Model.Enrollments.Count() == 1)
				{
					<dt class="col-sm-2">Course</dt>
					<table class="col-sm-6 table">
						<thead>
							<tr>
								<th>Grade</th>
								<th>Title</th>
								<th>Credits</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var enroll in Model.Enrollments)
							{
								<tr>
									<td partial name="_Grade" model="item">@enroll.grade</td>
									<td style="color:black">@enroll.course.title</td>
									<td style="color:black">@enroll.course.credits</td>
								</tr>
							}
						</tbody>
					</table>
				}
				@if (@Model.Enrollments.Count() > 1)
				{
					<dt class="col-sm-2">Courses</dt>
					<table class="col-sm-6 table">
						<thead>
							<tr>
								<th>Grade</th>
								<th>Title</th>
								<th>Credits</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var enroll in Model.Enrollments)
							{
								<tr>
									<td partial name="_Grade" model="item">@enroll.grade</td>
									<td style="color:black">@enroll.course.title</td>
									<td style="color:black">@enroll.course.credits</td>
								</tr>
							}
						</tbody>
					</table>
				}
			</dl>

			<form asp-action="Delete">
				<input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
				<a asp-action="Index">Back to List</a>
			</form>
		</div>
	</div>
</div>
